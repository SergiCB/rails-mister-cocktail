<div class="container">
  <div class="cards">
    <%@cocktails.each do |cocktail| %>
      <div class="card">
        <div class="card-image">
          <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
        </div>
        <div class="card-content">
          <p><%=link_to cocktail.name, cocktail_path(cocktail) %></p>
        </div>
      </div>
    <%end %>
  </div>
</div>


<p><%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-primary" %></p>
